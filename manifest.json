{
    "name": "Rethink",
    "description": "Fact-driven news aggregation: All the essential details in one place, free from the bias and clutter.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "hello.html"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions" [ 
        "http://localhost:5000/*"
    ],
    "icons": {
        "48": "./resources/RethinkLogo.png"
    },

    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "js": ["content.js"],
          
          "matches": [
            "https://www.cnn.com/*"
          ]
        }
    ]
}